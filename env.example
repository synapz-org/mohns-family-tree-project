# Application Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=family_tree_db
DB_USER=postgres
DB_PASSWORD=your_password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/family_tree_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@family-tree-manager.com
SENDGRID_FROM_NAME=Mohns Family Tree

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=family-tree-uploads
AWS_S3_BUCKET_REGION=us-east-1

# Alternative: Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=family-tree-uploads
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Blockchain Configuration (Ethereum/Polygon)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-rpc.com
WEB3_PRIVATE_KEY=your_private_key_for_smart_contracts
CONTRACT_ADDRESS=your_smart_contract_address

# StoryCorps Integration
STORYCORPS_API_KEY=your_storycorps_api_key
STORYCORPS_API_URL=https://archive.storycorps.org/api

# Mac Family Tree Integration
MAC_FAMILY_TREE_EXPORT_PATH=/path/to/mac/family/tree/exports

# Print-on-Demand Services
BLURB_API_KEY=your_blurb_api_key
LULU_API_KEY=your_lulu_api_key
LULU_API_SECRET=your_lulu_api_secret

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_MS=500

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,audio/wav

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
ENABLE_DEBUG_MODE=true

# Privacy and Compliance
GDPR_ENABLED=true
HIPAA_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555

# Feature Flags
ENABLE_STORY_COLLECTION=true
ENABLE_BOOK_GENERATION=true
ENABLE_PRIVACY_PLATFORM=true
ENABLE_BLOCKCHAIN_INTEGRATION=false
ENABLE_AI_FEATURES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Email Templates
WELCOME_EMAIL_TEMPLATE_ID=welcome_template_id
PASSWORD_RESET_TEMPLATE_ID=password_reset_template_id
STORY_SHARED_TEMPLATE_ID=story_shared_template_id
REUNION_INVITATION_TEMPLATE_ID=reunion_invitation_template_id 